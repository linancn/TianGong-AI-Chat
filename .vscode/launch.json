{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {   
            "name": "Chat",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "cwd": "${workspaceFolder}",
            // "justMyCode": false,
            "args": ["run", "src/Chat.py"]
        },
        {   
            "name": "Chat_Local",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "cwd": "${workspaceFolder}",
            // "justMyCode": false,
            "args": ["run", "src/Chat_Local.py"]
        },
        {   
            "name": "Chat_Audit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "cwd": "${workspaceFolder}",
            // "justMyCode": false,
            "args": ["run", "src/Chat_Audit.py"],
            "env": {
                "ui": "audit-cn"
            }
        },
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        }
    ]
}